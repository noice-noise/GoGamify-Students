<form class="form" action="/teacher/register" method="POST">
  <label for="familyName">Family Name</label>
  <input name="familyName" class="form__field" type="text" required />
  <label for="middleName">Middle Name</label>
  <input name="middleName" class="form__field" type="text" required />
  <label for="firstName">First Name</label>
  <input name="firstName" class="form__field" type="text" required />

  <label for="gender">Gender</label>
  <select class="form__field" name="gender" id="gender" required>
    <option value="Prefer not to say" selected>Prefer to say</option>

    <option value="Male">Male</option>
    <option value="Female">Female</option>
  </select>

  <label for="school">School</label>
  <select class="form__field" name="school" id="school" required>
    <option class="" value="" disabled selected hidden>Enter school</option>

    <option value="Cebu Institute of Technology - University">
      Cebu Institute of Technology - University
    </option>

    <option value="Abbey Park Academy Corp.">Abbey Park Academy Corp.</option>
    <option value="Abellana NHS (Day & NIght)">
      Abellana NHS (Day & NIght)
    </option>
    <option value="Abraham's Children Montessori">
      Abraham's Children Montessori
    </option>
    <option value="Abundant Grace Leaning Center, Inc.">
      Abundant Grace Leaning Center, Inc.
    </option>
    <option value="Not specified">Others</option>
  </select>

  <label for="gradeLevel">Grade Level</label>
  <select class="form__field" name="gradeLevel" id="gradeLevel" required>
    <option class="" value="" disabled selected hidden>
      Enter Grade level
    </option>

    <option value="1">Grade 1</option>
    <option value="2">Grade 2</option>
    <option value="3">Grade 3</option>
    <option value="4">Grade 4</option>
    <option value="5">Grade 5</option>
    <option value="6">Grade 6</option>
    <option value="7">Grade 7</option>
    <option value="8">Grade 8</option>
    <option value="9">Grade 9</option>
    <option value="10">Grade 10</option>
  </select>

  <label for="subjects">Subject Major</label>
  <select class="form__field" name="subjects" id="subjects" required>
    <option class="" value="" disabled selected hidden>
      Enter Subject Major
    </option>

    <option value="Mother Tongue">Mother Tongue</option>
    <option value="English">English</option>
    <option value="Filipino">Filipino</option>
    <option value="Mathematics">Mathematics</option>
    <option value="Science">Science</option>
    <option value="Araling Panlipunan">Araling Panlipunan</option>
    <option value="Edukasyon Sa Pagpapakatao">Edukasyon Sa Pagpapakatao</option>
    <option value="MAPEH">MAPEH</option>
    <option value="Technology Livelihood Education">
      Technology Livelihood Education
    </option>
    <option value="Edukasyong Pantahanan at Pangkabuhayan">
      Edukasyong Pantahanan at Pangkabuhayan
    </option>
    <option value="Electronics">Electronics</option>
    <option value="Social Studies">Social Studies</option>
    <option value="Values Education">Values Education</option>
    <option value="ICT">ICT</option>
    <option value="Chemistry">Chemistry</option>
    <option value="Research">Research</option>
    <option value="Physics">Physics</option>
  </select>

  <label for="about">About me</label>
  <textarea
    class="form__field resize-y"
    name="about"
    id="about"
    cols="30"
    rows="6"
  ></textarea>

  <label for="social">My Social Media</label>
  <textarea
    class="form__field resize-y"
    name="social"
    id="social"
    cols="30"
    rows="3"
  ></textarea>

  <div class="flex gap-10">
    <button class="button button--cta px-10 lg:px-20" type="submit">
      Update Profile
    </button>
    <button class="button button--muted" type="reset">Reset</button>
  </div>
</form>
